@page "/"
@inject ISnackbar Snackbar

<MudGrid Spacing="4">
    <MudItem xs="12">
        <MudPaper Class="pa-2" >
            <MudText Typo="Typo.h6">Please see the documentation to learn about how MudBlazor's theme works: <MudLink Href="https://www.mudblazor.com/customization/overview" Target="_blank">MudTheme Documentation</MudLink></MudText>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12">
        <MudPaper Class="pa-4 d-flex justify-center flex-wrap" Height="100%">   
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Primary">Primary</MudButton>
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Secondary">Secondary</MudButton>
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Tertiary">Tertiary</MudButton>
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Success">Success</MudButton>
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Info">Info</MudButton>
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Warning">Warning</MudButton>
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Error">Error</MudButton>
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Dark">Dark</MudButton>
            <MudButton Variant="Variant.Filled" Class="ma-2" Color="Color.Default">Default</MudButton>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="6">
        <MudPaper Class="pa-4 d-flex justify-center flex-wrap" Height="100%">
            <MudButton Variant="Variant.Outlined" Class="ma-2" @onclick="@(() => Snackbar.Add("Default", Severity.Normal))">Normal snackbar</MudButton>
            <MudButton Variant="Variant.Outlined" Class="ma-2" Color="Color.Info" @onclick="@(() => Snackbar.Add("Info", Severity.Info))">Info snackbar</MudButton>
            <MudButton Variant="Variant.Outlined" Class="ma-2" Color="Color.Success" @onclick="@(() => Snackbar.Add("Success", Severity.Success))">Success snackbar</MudButton>
            <MudButton Variant="Variant.Outlined" Class="ma-2" Color="Color.Warning" @onclick="@(() => Snackbar.Add("Warning", Severity.Warning))">Warning snackbar</MudButton>
            <MudButton Variant="Variant.Outlined" Class="ma-2" Color="Color.Error" @onclick="@(() => Snackbar.Add("Error", Severity.Error))">Error snackbar</MudButton>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="6">
        <MudPaper Class="pa-4 d-flex justify-center flex-wrap" Height="100%">   
            <MudAlert Class="ma-2" Severity="Severity.Info" Variant="Variant.Filled">Info</MudAlert>
            <MudAlert Class="ma-2" Severity="Severity.Success" Variant="Variant.Filled">Success</MudAlert>
            <MudAlert Class="ma-2" Severity="Severity.Warning" Variant="Variant.Filled">Warning</MudAlert>
            <MudAlert Class="ma-2" Severity="Severity.Error" Variant="Variant.Filled">Error</MudAlert>
        </MudPaper>
    </MudItem>
  
    <MudItem xs="6">
        <MudPaper Class="pa-4 d-flex justify-space-around flex-wrap" MinHeight="100px" Height="100%">
            <MudStack Row="true">
                <div>
                    <MudSkeleton Width="200px" Height="50px"/>
                    <MudSkeleton SkeletonType="SkeletonType.Circle" Width="50px" Height="50px"/>
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px"/>
                </div>
                <div>
                    <MudSkeleton Width="200px" Height="50px"/>
                    <MudSkeleton Width="200px" Height="50px" Animation="Animation.False" />
                    <MudSkeleton Width="200px" Height="50px" Animation="Animation.Wave" />
                </div>
            </MudStack>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="6">
        <MudPaper Class="pa-4 d-flex justify-space-around flex-wrap" MinHeight="100px" Height="100%">
            <MudTreeView T="string" Hover="true" SelectedValue="@("Test 1")" SelectionMode="SelectionMode.SingleSelection">
                <MudTreeViewItem Value="@("Available 1")" Expanded="true" Icon="@Icons.Material.Filled.Folder" IconExpanded="@Icons.Custom.Uncategorized.FolderOpen">
                    <MudTreeViewItem Value='"Test 1"' Icon="@Icons.Material.Filled.InsertDriveFile" />
                    <MudTreeViewItem Value='"Test 2"' Icon="@Icons.Material.Filled.InsertDriveFile" />
                </MudTreeViewItem>
                <MudTreeViewItem Disabled="true" Value="@("Unavailable")" Icon="@Icons.Material.Filled.FolderOff" />
                <MudTreeViewItem Value="@("Available 2")" Expanded="false" Icon="@Icons.Material.Filled.Folder" IconExpanded="@Icons.Custom.Uncategorized.FolderOpen">
                    <MudTreeViewItem Value='"Test 3"' Icon="@Icons.Material.Filled.InsertDriveFile" />
                </MudTreeViewItem>
            </MudTreeView>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        Snackbar.Configuration.PositionClass = Defaults.Classes.Position.BottomCenter;
    }

}